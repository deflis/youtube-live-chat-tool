{
  "name": "youtube-chat-electron",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "description": "YouTube Live 用コメントビューワ",
  "author": {
    "name": "riel",
    "email": "mail@riel.live"
  },
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run start",
