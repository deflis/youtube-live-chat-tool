    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "turbo": "latest"
  },
  "packageManager": "npm@8.5.5"
