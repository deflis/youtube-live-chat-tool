{
  "name": "youtube-chat-electron",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run start",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "turbo": "latest"
  },
  "packageManager": "npm@8.5.5",
  "build": {
    "appId": "live.riel.youtube.chat",
    "productName": "YouTube Live Chat Tool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "lib",
      "package.json",
      "package-lock.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "deflis",
      "repo": "youtube-live-chat-tool",
      "releaseType": "release"
    }
  }
}
